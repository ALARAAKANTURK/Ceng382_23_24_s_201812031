@page
@model MyApp.Namespace.ReservationsModel

@{
    ViewData["Title"] = "Create Reservation";
}

<h1>Create Reservation</h1>

<form method="post">
     <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        
    <div class="form-group">
       
        <label asp-for="Reservation.ReservationDate">Start Date and Time</label>
        <input asp-for="Reservation.ReservationDate" type="datetime-local" class="form-control"/>
        <span asp-validation-for="Reservation.ReservationDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Reservation.ReservationEndDate">End Date and Time</label>
        <input asp-for="Reservation.ReservationEndDate" type="datetime-local" class="form-control"/>
        <span asp-validation-for="Reservation.ReservationEndDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Reservation.RoomId">Room</label>
        <select asp-for="Reservation.RoomId" asp-items="@(new SelectList(Model.Rooms, "Id", "RoomName"))" class="form-control">
            <option value="">Please select a room</option>
        </select>
        <span asp-validation-for="Reservation.RoomId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function() {
            $("form").validate({
                rules: {
                    "Reservation.ReservationDate": {
                        required: true,
                        date: true
                    },
                    "Reservation.ReservationEndDate": {
                        required: true,
                        date: true
                    },
                    "Reservation.RoomId": {
                        required: true
                    }
                },
                messages: {
                    "Reservation.ReservationDate": {
                        required: "Please enter a start date and time.",
                        date: "Please enter a valid date."
                    },
                    "Reservation.ReservationEndDate": {
                        required: "Please enter an end date and time.",
                        date: "Please enter a valid date."
                    },
                    "Reservation.RoomId": {
                        required: "Please select a room."
                    }
                },
                errorClass: "text-danger",
                validClass: "is-valid",
                errorPlacement: function(error, element) {
                    error.appendTo(element.parent());
                }
            });
        });
    </script>
}
