@page
@model MyApp.Namespace.ShowReservationsModel
@{
    ViewData["Title"] = "Show Reservations";
}

<h1>Show Reservations</h1>

<form method="get">
    <div class="form-group">
        <label for="RoomName">Room Name</label>
        <input type="text" class="form-control" id="RoomName" name="RoomName" value="@Model.RoomName" />
    </div>
    <div class="form-group">
        <label for="StartDate">Start Date</label>
        <input type="date" class="form-control" id="StartDate" name="StartDate" value="@Model.StartDate?.ToString("yyyy-MM-dd")" />
    </div>
    <div class="form-group">
        <label for="EndDate">End Date</label>
        <input type="date" class="form-control" id="EndDate" name="EndDate" value="@Model.EndDate?.ToString("yyyy-MM-dd")" />
    </div>
    <div class="form-group">
        <label for="RoomCapacity">Room Capacity</label>
        <input type="number" class="form-control" id="RoomCapacity" name="RoomCapacity" value="@Model.RoomCapacity" />
    </div>
    <button type="submit" class="btn btn-primary">Filter</button>
</form>

<table class="table table-bordered mt-4">
    <thead>
        <tr>
            <th>Time/Day</th>
            @for (int i = 0; i < 7; i++)
            {
                <th>@Model.StartDate?.AddDays(i).ToString("ddd MMM d")</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var hour in Enumerable.Range(0, 24))
        {
            <tr>
                <td>@hour:00</td>
                @for (int i = 0; i < 7; i++)
                {
                    <td>
                        @foreach (var reservation in Model.Reservations.Where(r => r.ReservationDate.Hour == hour && r.ReservationDate.Date == Model.StartDate?.AddDays(i)))
                        {
                            <div>
                                @reservation.Room.RoomName 
                                <a href="/edit/@reservation.Id" class="btn btn-sm btn-warning">Edit</a>
                                <a href="/delete/@reservation.Id" class="btn btn-sm btn-danger">Delete</a>
                            </div>
                        }
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
