@page
@model MyApp.Namespace.ShowReservationsModel
@{
    ViewData["Title"] = "Show Reservations";
}

<h1>Show Reservations</h1>

<form method="get">
    <div class="form-group">
        <label for="RoomName">Room Name:</label>
        <select id="RoomName" name="RoomName" class="form-control">
            <option value="">All</option>
            @foreach (var room in Model.Rooms)
            {
                <option value="@room.RoomName">@room.RoomName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="StartDate">Start Date:</label>
        <input type="date" id="StartDate" name="StartDate" class="form-control" value="@Model.StartDate?.ToString("yyyy-MM-dd")" />
    </div>
    <div class="form-group">
        <label for="EndDate">End Date:</label>
        <input type="date" id="EndDate" name="EndDate" class="form-control" value="@Model.EndDate?.ToString("yyyy-MM-dd")" />
    </div>
    <div class="form-group">
        <label for="RoomCapacity">Room Capacity:</label>
        <input type="number" id="RoomCapacity" name="RoomCapacity" class="form-control" value="@Model.RoomCapacity" />
    </div>
    <button type="submit" class="btn btn-primary">Filter</button>
</form>

<h2>Weekly Timetable</h2>
<table class="table table-sm table-dark table-hover">
    <thead>
        <tr>
            <th scope="col">Time/Day</th>
            @for (int i = 0; i < 7; i++)
            {
                <th scope="col">@Model.StartDate?.AddDays(i).ToString("dddd, MMM dd")</th>
            }
        </tr>
    </thead>
    <tbody>
        @for (int hour = 0; hour < 24; hour++)
        {
            <tr>
                <td>@hour:00</td>
                @for (int day = 0; day < 7; day++)
                {
                    var currentDate = Model.StartDate?.AddDays(day);
                    var reservation = Model.Reservations.FirstOrDefault(r => r.ReservationDate.Hour == hour && r.ReservationDate.Date == currentDate);

                    <td>
                        @if (reservation != null)
                        {
                            @reservation.ReserverName
                            <form method="post" asp-page-handler="Edit">
                                <input type="hidden" name="id" value="@reservation.Id" />
                                <button type="button" class="btn btn-sm btn-warning" data-toggle="modal" data-target="#editModal" data-id="@reservation.Id" data-name="@reservation.ReserverName" data-date="@reservation.ReservationDate" data-roomid="@reservation.RoomId">Edit</button>
                            </form>
                            <form method="post" asp-page-handler="Delete">
                                <input type="hidden" name="id" value="@reservation.Id" />
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        }
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Edit Reservation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="editForm" method="post" asp-page-handler="Edit">
                    <input type="hidden" name="id" id="editReservationId" />
                    <div class="form-group">
                        <label for="editReserverName">Reserver Name:</label>
                        <input type="text" id="editReserverName" name="ReserverName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="editReservationDate">Reservation Date:</label>
                        <input type="datetime-local" id="editReservationDate" name="ReservationDate" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="editRoomId">Room:</label>
                        <select id="editRoomId" name="RoomId" class="form-control">
                            @foreach (var room in Model.Rooms)
                            {
                                <option value="@room.Id">@room.RoomName</option>
                            }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    $('#editModal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget); // Button that triggered the modal
        var id = button.data('id'); 
        var name = button.data('name'); 
        var date = new Date(button.data('date')).toISOString().slice(0, 16); 
        var roomid = button.data('roomid'); 

        var modal = $(this);
        modal.find('#editReservationId').val(id);
        modal.find('#editReserverName').val(name);
        modal.find('#editReservationDate').val(date);
        modal.find('#editRoomId').val(roomid);
    });
</script>
