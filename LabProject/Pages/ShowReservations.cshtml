@page
@model MyApp.Namespace.ShowReservationsModel
@{
    ViewData["Title"] = "ShowReservations";
}
<h1>Show Reservation</h1>
<table class="table table-sm table-dark table-hover">
    <thead>
        <tr>
            <th scope="col">Reserver Name</th>
            <th scope="col">RoomName</th>
             <th scope="col">ReservationStart</th>
              <th scope="col">ReservationEnd</th>
          
        </tr>
    </thead>
    <tbody>
    @foreach (var reservation in Model.Reservations )
    {
        <tr>
            <td>@reservation.ReserverName</td>
            <td>@reservation.RoomId</td>
             <td>@reservation.ReservationDate</td>
          <td>@reservation.ReservationEndDate</td>

            
        </tr>
    }
    </tbody>
</table>